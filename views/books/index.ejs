<%- include('../partials/head') %> <%- include('../partials/header') %>
<main>
  <form action="/books" method="POST">
    <label>
      Title:
      <input type="text" name="title" /> </label
    ><br />
    <label>
      Author first name:
      <input type="text" name="firstName" /> </label
    ><br />
    <label>
      Author last name:
      <input type="text" name="lastName" /> </label
    ><br />
    <label>
      Genre:
      <input type="text" name="genre" /> </label
    ><br />
    <label>
      Publish year:
      <input type="number" name="publishYear" /> </label
    ><br />
    <label>
      Page count:
      <input type="number" name="pageCount" min="1" /> </label
    ><br />
    <button type="submit">Add book</button>
  </form>
  <% books.forEach(function (b) { %>
  <p><%= b.author %></p>
  <p><%= b.genre %></p>
  <p><%= b.publishYear %></p>
  <p><%= b.pageCount %></p>
  <% }) %>
</main>
<%- include('../partials/footer') %>
