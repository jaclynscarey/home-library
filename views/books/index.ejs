<%- include('../partials/head') %> <%- include('../partials/header') %>
<!-- Change h1 later -->
<main>
  <section>
    <!-- Hide section -->
    <h2>Add a book</h2>
    <form action="/books" method="POST">
      <label>
        Title:
        <input type="text" name="title" /> </label
      ><br />
      <label>
        Author name(s) (separate by comma):
        <input type="text" name="authorName" /> </label
      ><br />
      <label>
        Genre:
        <input type="text" name="genre" /> </label
      ><br />
      <label>
        Publish year:
        <input type="number" name="publishYear" /> </label
      ><br />
      <label>
        Page count:
        <input type="number" name="pageCount" min="1" /> </label
      ><br />
      <button type="submit">Add book</button>
    </form>
  </section>
  <section>
    <h2>Your Books</h2>
    <% books.forEach(function (b) { %>
    <div>
      <p>
        Author(s): <% b.author.forEach(function(a, i) { %> <% if (i ===
        b.author.length - 1) { %> <%= a.firstName %> <%= a.lastName %> <% } else
        { %> <%= a.firstName %> <%= a.lastName %>, <% } }) %>
      </p>
      <p><%= b.genre %></p>
      <p><%= b.publishYear %></p>
      <p><%= b.pageCount %></p>
      <a href="/books/<%= b._id %>">Details</a>
    </div>
    <% }) %>
  </section>
</main>
<%- include('../partials/footer') %>
